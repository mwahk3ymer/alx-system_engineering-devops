#!/usr/bin/env bash
# This script displays numbers from 1 to 20 and shows messages for specific iterations using a case statement.

# Initialize a counter
count=1

# Use a while loop to iterate from 1 to 20
while [ "$count" -le 20 ]; do
  case "$count" in
    4)
      echo $count
      echo "bad luck from China"
      ;;
    9)
      echo $count 
      echo "bad luck from Japan"
      ;;
    17)
      echo $count 
      echo "bad luck from Italy"
      ;;
    *)
      echo "$count"
      ;;
  esac
  
  # Increment the counter
  count=$((count + 1))
done
